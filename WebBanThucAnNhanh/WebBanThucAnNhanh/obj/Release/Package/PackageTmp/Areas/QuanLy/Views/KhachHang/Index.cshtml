@model IEnumerable<WebBanThucAnNhanh.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong>Danh sách khách hàng</strong>
                </div>
                @*@if (Session["IDQL"] != null)
                {
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create", "KhachHang")" class="btn btn-sm btn-success">Thêm mới khách hàng</a>
                    </div>
                }
                else
                {
                    <div></div>
                }*@
                </div>
        </div>
    </div>
    <div class="card-block p-3">
        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    Tên
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Email
                </th>
                <th>
                    Mật khẩu
                </th>
                <th>
                    Loại
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TENKHACHHANG)
                    </td>
                    <td>
                        @(item.NGAYSINH.ToString("dd/MM/yyyy"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DIACHI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMAIL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PASSWORD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LOAI)
                    </td>
                    <td>
                        @if (Session["IDQL"] != null)
                        {
                            <a href="@Url.Action("Details", "KhachHang", new { id = @item.MAKHACHHANG })" class="btn btn-sm btn-warning">Chi tiết</a>
                            <a href="@Url.Action("Edit", "KhachHang", new { id = @item.MAKHACHHANG })" class="btn btn-sm btn-warning">Sửa</a>
                        }
                        else
                        {
                            <div></div>
                        }

                    </td>
                </tr>
            }

        </table>
        </div>
 }