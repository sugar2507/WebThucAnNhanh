                        @Html.EditorFor(model => model.TENLOAI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <tr>
                        <td>
                            <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;">
                                <input type="submit" value="Lưu loại" class="btn btn-default" />
                            </div>
                        </td>
                        <td>
                            <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;margin-top:10px;">
                                @Html.ActionLink("Back to List", "Index")
                            </div>

                        </td>
                    </tr>

                </div>
            </div>
            </div>
        </div>

            
}
