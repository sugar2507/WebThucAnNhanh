@model IEnumerable<WebBanThucAnNhanh.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong>Danh sách tài khoản nhân viên</strong>
                </div>
                @if (Session["IDQL"] != null)
                {
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create", "Account")" class="btn btn-sm btn-success">Thêm mới tài khoản</a>
                    </div>
                }
                else
                {
                    <div></div>
                }
                </div>
        </div>
    </div>
    <div class="card-block p-3">
        <table class="table table-bordered table-hover table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TENNV)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SDT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EMAIL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PASSWORD)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TENNV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EMAIL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PASSWORD)
                    </td>
                    <td>
                        @if (Session["IDQL"] != null)
                        {
                            <a href="@Url.Action("Edit", "Account", new { id = item.MANHANVIEN })" class="btn btn-sm btn-warning">Sửa</a>
                            <a href="@Url.Action("Delete", "Account", new { id = item.MANHANVIEN })" class="btn btn-sm btn-danger">Xóa</a>
                        }
                    else
                    {
                        <div></div>
                    }
                        </td>
                </tr>
            }

        </table>
    </div>
}