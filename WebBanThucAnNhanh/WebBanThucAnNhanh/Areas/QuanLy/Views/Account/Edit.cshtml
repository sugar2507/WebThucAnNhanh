@model WebBanThucAnNhanh.Models.NHANVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong>Chỉnh sửa thông tin nhân viên </strong>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div style="padding:2% 1% 0% 2%">
            <table class="dl-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MANHANVIEN)

                <div class="form-group">
                    Tên nhân viên
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TENNV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TENNV, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Số điện thoại
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Email
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Mật khẩu
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", @type="text" } })
                        @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                    </div>
                </div>
            </table>

            <div class="form-group">
                <tr>
                    <td>
                        <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;">
                            <input type="submit" value="Sửa nhân viên" class="btn btn-default" />
                        </div>
                    </td>
                    <td>
                        <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;margin-top:10px;">
                            @Html.ActionLink("Quay lại", "Index")
                        </div>

                    </td>
                </tr>

            </div>
        </div>
        </div>
}
