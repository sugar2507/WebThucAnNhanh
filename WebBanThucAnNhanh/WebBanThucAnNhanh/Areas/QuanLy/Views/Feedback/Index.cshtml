@model IEnumerable<WebBanThucAnNhanh.Models.FEEDBACK>

@{
    ViewBag.Title = "ListFeedback";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong>Phản hồi của khách hàng </strong>
            </div>
        </div>
    </div>
</div>

<div class="card-block p-3">
    <table class="table table-bordered table-hover table-striped">

        <tr style="text-transform:uppercase">

            <th>
                Số điện thoại
            </th>
            <th>Tên</th>
            <th>Nội Dung</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TENKH)
                </td>
                <td colspan="6">             
                      @Html.DisplayFor(modelItem => item.NOIDUNG)                 
                </td>
                <td>
                @if (Session["IDQL"] != null)
                {                
                    <a href="@Url.Action("Details", "Feedback", new { id = @item.MAFEEDBACK })" class="btn btn-sm btn-dark">Chi tiết</a>
                    <a href="@Url.Action("Delete", "Feedback", new { id = @item.MAFEEDBACK })" class="btn btn-sm btn-danger">Xóa</a>            
                }
                else
                {
                    <div></div>
                }   
                   </td>
            </tr>
        }

    </table>
</div>