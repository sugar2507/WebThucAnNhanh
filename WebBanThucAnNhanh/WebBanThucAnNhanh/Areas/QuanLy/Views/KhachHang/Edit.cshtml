@model WebBanThucAnNhanh.Models.KHACHHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong>Chỉnh sửa thông tin khách hàng </strong>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div style="padding:2% 1% 0% 2%">
            <table class="dl-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MAKHACHHANG)

                <div class="form-group">
                    Tên khách hàng
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TENKHACHHANG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TENKHACHHANG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Ngày sinh
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Địa chỉ
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Số điện thoại
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Email
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Loại
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LOAI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LOAI, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Mật khẩu
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PASSWORD, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Nhập lại mật khẩu
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comfirm, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Comfirm, "", new { @class = "text-danger" })
                    </div>
                </div>

            </table>

            <div class="form-group">
                <tr>
                    <td>
                        <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;">
                            <input type="submit" value="Sửa" class="btn btn-default" />
                        </div>
                    </td>
                    <td>
                        <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;margin-top:10px;">
                            @Html.ActionLink("Quay lại", "Index")
                        </div>

                    </td>
                </tr>

            </div>
        </div>
    </div>
}
