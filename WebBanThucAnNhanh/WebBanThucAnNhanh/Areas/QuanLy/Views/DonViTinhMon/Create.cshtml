@model WebBanThucAnNhanh.Models.DONVITINH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6 text-danger text-uppercase">
                        <strong>Tạo mới đơn vị</strong>
                    </div>
                </div>
            </div>
        </div>
        <div style="padding:2% 1% 0% 2%">
            <div class="form-group">
                Tên đơn vị
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENDONVITINH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENDONVITINH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-default" />
                    @Html.ActionLink("Quay về ", "Index")
                </div>
            </div>
        </div>
    </div>
}


