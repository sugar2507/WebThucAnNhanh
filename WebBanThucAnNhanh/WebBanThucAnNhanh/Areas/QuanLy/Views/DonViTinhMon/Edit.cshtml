@model WebBanThucAnNhanh.Models.DONVITINH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 text-danger text-uppercase">
                    <strong>Chỉnh sửa đơn vị tính </strong>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div style="padding: 2% 1% 0% 2%">
            <div class="form-horizontal">
                <div class="form-group">
                    Mã đơn vị tính
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MADONVITINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MADONVITINH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Tên đơn vị tính
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TENDONVITINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TENDONVITINH, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;">
                        <input type="submit" value="Sửa đơn vị tính" class="btn btn-default" />
                    </div>
                    <div class="col-md-offset-2 col-md-10" style="float:left;width:200px;margin-top:10px;">
                        @Html.ActionLink("Quay về", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}


