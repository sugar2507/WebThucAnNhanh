@model WebBanThucAnNhanh.Models.DATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout.cshtml";
    var CTDATHANG = Session["CTDATHANG"] as WebBanThucAnNhanh.Models.CT_MONAN_DATHANG;
}
<div style="padding-left:20px">
    <h2>CHI TIẾT ĐẶT HÀNG</h2>

    <div>
        <h4>MÃ ĐẶT HÀNG : @Html.DisplayFor(model => model.MADATHANG)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                NGÀY : @Html.DisplayFor(model => model.NGAY)
            </dt>
            <dt>
                TỔNG TIỀN : @Math.Round(Model.TONGTIEN * 20000, 2).ToString("N0")
            </dt>
            <dt>
                TRẠNG THÁI :  @if (Model.TRANGTHAI.Equals(0))
                {
                    <span>Chờ Xác Nhận</span>
                }
                @if (Model.TRANGTHAI.Equals(1))
                {
                    <span>Đã Xác Nhận</span>
                }
                @if (Model.TRANGTHAI.Equals(2))
                {
                    <span>Đã Hoàn Tất</span>
                }
                @if (Model.TRANGTHAI.Equals(3))
                {
                    <span>Đã Hủy Đơn</span>
                }
            </dt>
            <dt>
                GHI CHÚ : @Html.DisplayFor(model => model.GHICHU)
            </dt>
        </dl>
    </div>
    <hr />
    <table class="table">
        <tr>
            <th>
                Tên món 
            </th>
            <th>
                SỐ LƯỢNG
            </th>
            <th>
                GIÁ BÁN
            </th>
        </tr>

        @foreach (var item in Model.CT_MONAN_DATHANG)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MONAN.TENMONAN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOLUONG)
                </td>
                <td>
                    @Math.Round(item.MONAN.GIABAN * 20000, 2).ToString("N0")
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
