@using WebBanThucAnNhanh.Models;
@model IEnumerable<WebBanThucAnNhanh.Models.MONAN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainPage.cshtml"; }
<head>
    <link href="~/Content/Font.css" rel="stylesheet" />
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="font-all">
        @foreach (var pro in Model)
        {
            <div>
                @if (pro.STATUS == 1)
                {
                    <div class="col-lg-4 col-md-4 col-6">
                        <div class="cake_feature_item">
                            <div class="cake_img">
                                <img src="@Url.Content(pro.HINHANH)" width="100%" height="280px" />
                            </div>
                            <div class="cake_text">
                                <h4>@Math.Round(pro.GIABAN * 20000, 2).ToString("N0")</h4>
                                <h3>@Html.DisplayFor(model => pro.TENMONAN)</h3>
                                <div class="btn-detail " style=" padding:0 5%;">
                                    <p style="        width: 100%;  display: flex;">
                                        <a href="/GioHang/AddToCart/@pro.MAMONAN" class="pest_btn " style=" margin-right: 5px;">
                                            Đặt Hàng
                                        </a>

                                        <a href="/Home/Details/@pro.MAMONAN" class="pest_btn bgdetail ">
                                            Chi Tiết@*@Html.ActionLink("Details", "Details", new { id = pro.MAMONAN })*@
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (pro.STATUS == 2)
                {
                    <div>

                    </div>
                }
            </div>

        }
    </div>
}